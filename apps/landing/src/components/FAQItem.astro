---
const { question, answer } = Astro.props;
---

<details class="group p-5 sm:p-6 bg-white/[0.02] border border-white/[0.06] rounded-2xl mb-3 last:mb-0 text-base sm:text-lg leading-[145%] transition-all duration-200 hover:bg-white/[0.04] hover:border-white/[0.1]">
  <summary class="flex items-center gap-3 cursor-pointer list-none">
    <span class="inline-flex h-8 w-8 items-center justify-center rounded-full bg-white/10 text-white">
      <svg class="icon-plus" width="18" height="18" viewBox="0 0 14 14" fill="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
        <path d="M7 2V12" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/>
        <path d="M2 7H12" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/>
      </svg>
      <svg class="icon-minus" width="18" height="18" viewBox="0 0 14 14" fill="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
        <path d="M2 7H12" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/>
      </svg>
      <span class="sr-only">Toggle answer</span>
    </span>
    <span class="flex-1 leading-7 font-semibold text-white">{question}</span>
  </summary>

  <div class="mt-4 border-t border-white/10 pl-11 pr-4 pt-4 text-white/60 leading-[155%]">
    {answer}
  </div>
</details>

<style>
  summary::-webkit-details-marker {
    display: none;
  }
  /* Icon toggle without relying on framework variants */
  .icon-minus {
    display: none;
  }
  details[open] .icon-plus {
    display: none;
  }
  details[open] .icon-minus {
    display: inline;
  }
</style>
