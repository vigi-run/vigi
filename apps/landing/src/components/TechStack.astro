---
import ListItem from "../components/ListItem.astro";
import { type Lang, defaultLang } from "../i18n/config";
import { useTranslations } from "../i18n/utils";

interface Props {
  lang?: Lang;
}

const { lang = defaultLang } = Astro.props;
const t = useTranslations(lang);
---

<section class="py-8 px-4">
  <div class="card max-w-screen-lg mx-auto py-10 sm:py-12 px-6 sm:px-8">
    <h2 class="font-bold text-2xl sm:text-[32px] leading-[125%] mb-8 text-white">{t.techStack.title}</h2>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-x-6 gap-y-4">
      <!-- Runtime & Services -->
      <div class="col-span-1 sm:col-span-2 lg:col-span-3 mt-2 text-xs font-semibold uppercase tracking-wider text-white/40">
        {t.techStack.categories.runtime}
      </div>
      <ListItem><Fragment set:html={t.techStack.items.go} /></ListItem>
      <ListItem><Fragment set:html={t.techStack.items.react} /></ListItem>
      <ListItem><Fragment set:html={t.techStack.items.docker} /></ListItem>

      <!-- Data Storage (Selectable) -->
      <div class="col-span-1 sm:col-span-2 lg:col-span-3 mt-6 text-xs font-semibold uppercase tracking-wider text-white/40">
        {t.techStack.categories.dataStorage}
      </div>
      <ListItem><Fragment set:html={t.techStack.items.postgresql} /></ListItem>
      <ListItem><Fragment set:html={t.techStack.items.mongodb} /></ListItem>
      <ListItem><Fragment set:html={t.techStack.items.sqlite} /></ListItem>
    </div>
  </div>
</section>
