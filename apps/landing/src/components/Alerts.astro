---
import ListItem from "../components/ListItem.astro";
import { type Lang, defaultLang } from "../i18n/config";
import { useTranslations } from "../i18n/utils";

interface Props {
  lang?: Lang;
}

const { lang = defaultLang } = Astro.props;
const t = useTranslations(lang);
---

<section class="py-8 px-4" id="alerts">
  <div class="card max-w-screen-lg mx-auto py-10 sm:py-12 px-6 sm:px-8">
    <h2 class="font-bold text-2xl sm:text-[32px] leading-[125%] mb-8 text-white">{t.alerts.title}</h2>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-x-6 gap-y-4">
      <!-- Email & Webhooks -->
      <div class="col-span-full mt-2 text-xs font-semibold uppercase tracking-wider text-white/40">
        {t.alerts.categories.emailWebhooks}
      </div>
      <ListItem><Fragment set:html={t.alerts.items.email} /></ListItem>
      <ListItem><Fragment set:html={t.alerts.items.webhook} /></ListItem>

      <!-- Chat & Collaboration -->
      <div class="col-span-full mt-6 text-xs font-semibold uppercase tracking-wider text-white/40">
        {t.alerts.categories.chatCollab}
      </div>
      <ListItem><Fragment set:html={t.alerts.items.telegram} /></ListItem>
      <ListItem><Fragment set:html={t.alerts.items.slack} /></ListItem>
      <ListItem><Fragment set:html={t.alerts.items.googleChat} /></ListItem>
      <ListItem><Fragment set:html={t.alerts.items.signal} /></ListItem>
      <ListItem><Fragment set:html={t.alerts.items.mattermost} /></ListItem>
      <ListItem><Fragment set:html={t.alerts.items.matrix} /></ListItem>
      <ListItem><Fragment set:html={t.alerts.items.discord} /></ListItem>
      <ListItem><Fragment set:html={t.alerts.items.wecom} /></ListItem>
      <ListItem><Fragment set:html={t.alerts.items.whatsapp} /></ListItem>

      <!-- On-Call & Incident -->
      <div class="col-span-full mt-6 text-xs font-semibold uppercase tracking-wider text-white/40">
        {t.alerts.categories.onCall}
      </div>
      <ListItem><Fragment set:html={t.alerts.items.pagerduty} /></ListItem>
      <ListItem><Fragment set:html={t.alerts.items.opsgenie} /></ListItem>
      <ListItem><Fragment set:html={t.alerts.items.grafana} /></ListItem>

      <!-- Mobile Push & Self-Hosted -->
      <div class="col-span-full mt-6 text-xs font-semibold uppercase tracking-wider text-white/40">
        {t.alerts.categories.mobilePush}
      </div>
      <ListItem><Fragment set:html={t.alerts.items.ntfy} /></ListItem>
      <ListItem><Fragment set:html={t.alerts.items.gotify} /></ListItem>
      <ListItem><Fragment set:html={t.alerts.items.pushover} /></ListItem>
    </div>
  </div>
</section>
